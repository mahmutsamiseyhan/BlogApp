<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include("../partials/head") %> 
</head>
<body>
    
    <%- include("../partials/nav") %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">

                <!-- Mesaj Gösterimi -->
                <% if (typeof message !== "undefined") { %>
                    <div class="alert alert-<%= message.class %>">
                        <%= message.text %> 
                    </div>
                <% } %>

                <!-- Giriş Formu -->
                <form action="/account/login" method="POST">
                    <!-- CSRF Koruma -->
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    
                    <!-- Email Girişi -->
                    <div class="row mb-3">
                        <label for="email" class="col-sm-2 col-form-label">E-Posta</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                    </div>

                    <!-- Şifre Girişi -->
                    <div class="row mb-3">
                        <label for="password" class="col-sm-2 col-form-label">Şifre</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                    </div>

                    <!-- Giriş ve Şifre Sıfırlama Butonları -->
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Oturum Aç</button>
                            <a href="reset-password" class="btn btn-primary" role="button">Parola Sıfırlama</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        AOS.init({
          duration: 1200,
          easing: 'ease-in-out',
          once: true
        });
      </script>
    <script>
        const toggleButton = document.getElementById('theme-toggle');
        toggleButton.addEventListener('click', () => {
          document.body.classList.toggle('dark-mode');
        });
      </script>
      <!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
