<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include("../partials/head") %> 
</head>
<body>
    
    <%- include("../partials/nav") %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <div class="card card-body">
                    <form method="post">
                        <!-- CSRF Koruma -->
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <!-- Kullanıcı ID'si -->
                        <input type="hidden" name="userid" value="<%= user._id %>">

                        <!-- Kullanıcı Adı Girişi -->
                        <div class="row mb-3">
                            <label for="fullname" class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="fullname" name="fullname" value="<%= user.fullname %>">
                            </div>
                        </div>

                        <!-- Email Girişi -->
                        <div class="row mb-3">
                            <label for="email" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="email" name="email" value="<%= user.email %>">
                            </div>
                        </div>

                        <!-- Roller -->
                        <div class="row mb-3">
                            <label for="roles" class="col-sm-2 col-form-label">Roles</label>
                            <div class="col-sm-8">
                               <% roles.forEach(role => { %>
                                    <div class="form-check">
                                        <input id="role_<%= role._id %>" 
                                            type="checkbox" 
                                            class="form-check-input"
                                            name="roles[]"
                                            value="<%= role._id %>" 
                                            <%= user.roles.some(rol => String(rol._id) === String(role._id)) ? "checked" : "" %> >
                                        <label class="form-check-label" for="role_<%= role._id %>"><%= role.rolename %></label>
                                    </div>
                               <% }) %>
                            </div>
                        </div>

                        <!-- Kaydet Butonu -->
                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
       
</body>
</html>
