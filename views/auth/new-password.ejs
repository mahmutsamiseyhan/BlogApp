<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include("../partials/head") %> 
</head>
<body>
    
    <%- include("../partials/nav") %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">

                <!-- Mesaj Gösterimi -->
                <% if (typeof message !== "undefined") { %>
                    <div class="alert alert-<%= message.class %>">
                        <%= message.text %> 
                    </div>
                <% } %>

                <!-- Yeni Şifre Formu -->
                <form action="/account/new-password" method="POST">
                    <!-- CSRF Koruma -->
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <!-- Kullanıcı ve Token Bilgileri -->
                    <input type="hidden" name="userId" value="<%= userId %>">
                    <input type="hidden" name="token" value="<%= token %>">
                   
                    <!-- Şifre Girişi -->
                    <div class="row mb-3">
                        <label for="password" class="col-sm-2 col-form-label">Yeni Şifre</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                    </div>
                   
                    <!-- Güncelleme Butonu -->
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                          <button type="submit" class="btn btn-primary">Parola Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
  
</body>
</html>
