<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include("../partials/head") %> 
</head>
<body>
    
    <%- include("../partials/nav") %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">ID</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th style="width: 130px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td>#<%= user._id %></td> <!-- MongoDB ile kullanıyorsanız _id kullanılır -->
                                <td><%= user.fullname %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <% user.roles.forEach(role => { %>
                                        <%= role.rolename %><br>
                                    <% }) %>
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/admin/users/<%= user._id %>">Düzenle</a>
                                    <!-- Silme için onay sayfasına yönlendirme -->
                                    <a class="btn btn-sm btn-danger" href="/admin/user/delete/<%= user._id %>">Sil</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>
