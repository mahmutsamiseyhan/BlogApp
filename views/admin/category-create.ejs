<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include("../partials/head") %> 
</head>
<body>
    
    <%- include("../partials/nav") %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <!-- Kategori Ekleme/Düzenleme Formu -->
                <form method="post" action="/admin/category/create?_csrf=<%= csrfToken %>">
                    <!-- CSRF Koruma -->
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    
                    <!-- Kategori Adı Girişi -->
                    <div class="row mb-3">
                        <label for="name" class="col-sm-2 col-form-label">İsim</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Kategori Adı" required>
                        </div>
                    </div>

                    <!-- Kaydet Butonu -->
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>
