
<div class="card mb-3 shadow-sm">
    <div class="row g-0">
        <!-- Görsel Kısmı -->
        <div class="col-md-4">
            <img src="/static/images/<%= resim %>" class="img-fluid rounded-start" alt="<%= baslik %> görseli">
        </div>
        <!-- İçerik Kısmı -->
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="/blogs/<%= url %>" class="text-decoration-none text-dark"> <%= baslik %> </a>
                </h5>
                <p class="card-text"><%= altbaslik %></p>
            </div>
        </div>
    </div>
</div>
