<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include("../partials/head") %> 
</head>
<body>
    
    <%- include("../partials/nav") %> 

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px;">ID</th>
                            <th style="width: 150px;">Role Name</th>
                            <th>Kullanıcı Sayısı</th>
                            <th style="width: 130px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% roles.forEach(role => { %>
                            <tr>
                                <td>#<%= role._id %></td> <!-- MongoDB ile kullanıyorsanız _id kullanılır -->
                                <td><%= role.rolename %></td>
                                <td><%= role.user_count %></td>
                                <td>
                                    <a class="btn btn-sm btn-primary" href="/admin/roles/<%= role._id %>">Düzenle</a>
                                    <!-- Silme için onay sayfasına yönlendirme -->
                                    <a class="btn btn-sm btn-danger" href="/admin/role/delete/<%= role._id %>">Sil</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
